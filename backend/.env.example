# Database Configuration (Supabase - use your online Supabase project URL)
DATABASE_URL=postgresql://postgres.[your-project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Supabase Configuration (use your online Supabase project details)
SUPABASE_URL=https://[your-project-ref].supabase.co
SUPABASE_ANON_KEY=[your-anon-key]
SUPABASE_SERVICE_KEY=[your-service-role-key]
SUPABASE_STORAGE_URL=https://[your-project-ref].supabase.co/storage/v1
SUPABASE_BUCKET=yantra-docs

# S3/Storage Configuration (Supabase Storage)
S3_ENDPOINT=https://[your-project-ref].supabase.co/storage/v1/s3
S3_ACCESS_KEY=[your-service-role-key]
S3_SECRET_KEY=[your-service-role-key]
S3_BUCKET=yantra-docs
S3_USE_SSL=true
LOCAL_STORAGE_PATH=./storage

# Security
SECRET_KEY=your-super-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=4320

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# OCR/ML Configuration
OCR_CONFIDENCE_THRESHOLD=0.6
TRUST_SCORE_THRESHOLD=0.6
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["application/pdf"]

# Worker Configuration
WORKER_CONCURRENCY=2
JOB_TIMEOUT_SECONDS=600

# Application Configuration
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=Yantra AI
API_V1_STR=/api/v1

# Authentication (set to true to disable auth for testing)
DISABLE_AUTH=false

# Monitoring (Optional)
SENTRY_DSN=
